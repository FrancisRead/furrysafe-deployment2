{
  "functions": [
    {
      "runtime": "nodejs16",
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"functions\" run lint"
      
      ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
      
    }
  ]
}